@model IEnumerable<TheWorld.Models.Trip>
@{
    ViewBag.Title = "Home Page";
 
}

@section Scripts{ 
    <script src="~/lib/angular/angular.min.js"></script>
    <script src="~/js/app-trips.js"></script>
    <script src="~/js/angularTripsController.js"></script>
}

<div class="row" ng-app="app-trips">
    <div ng-controller="angularTripsController as vm" class="col-md-6 col-md-offset-3">
        <table class="table table-responsive table-striped">
            <tr ng-repeat="trip in vm.trips">  <!--like foreach method-->
                <td>{{trip.name}}</td>
                <td>{{trip.created | date: 'shortDate'}}</td> <!--use | as filter sign-->
                <td><a href="#" class="btn btn-sm btn-primary">Manage</a></td>
            </tr>
        </table>
    </div>
    <div class="col-md-6 col-xs-8">
        <h1>The World Trip</h1>
        <p>This will be a fun website soon!</p>

        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control"/>
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control"/>
            </div>
            <div><input type="submit" value="Add" class="btn btn-success"/></div>
        </form>
    </div>
    <div class="col-md-6 col-xs-4">
        <h2>The Map</h2>
        <ul>
            @foreach(var item in Model)
            {
                <li>@item.Name: @item.DateCreated.ToString("d")</li>

            }
        </ul>
    </div>
</div>
